{
    "files.exclude": {
        // generic excludes:
        "modelsim/work/": true,
        "modelsim/*.{cr.mti,wlf}": true,
        "quartus/{db,incremental_db,output}/": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "{**/.templates/,**/tsconfig.json}": false,
    },
    "files.associations": {
        "*.svh": "verilog"
    },
    "trailing-spaces.trimOnSave": true,

    "todo-tree.filtering.useBuiltInExcludes": "file excludes",
    "todo-tree.general.statusBar": "total",
    "todo-tree.general.tags": [
        "TODO.learn" ,
        "TODO.design",
        "TODO.doc"   ,
        "TODO.impl"  ,
        "TODO.test"  ,
        "TODO.build" ,
        "TODO",
    ],
}